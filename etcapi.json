{
	"locale": {
		"language": "en",
		"country": "US",
		"timezone": "GMT"
	},
	
	"log": {
		"sysout": true,
		"path": "logs/",
		"prefix": "api",
		"datePattern": "yyyyMMddHHmmss",
		"maxLength": 62914560,
		"maxRows": 100000,
		"level": 6,
		"rotationIntervalMinutes": 120
	},
	
	"defaults": {
		"semaphoreLockTimeoutMs": 30000,
		"threadInitialBackoffMs": 20,
		"threadMaxBackoffMs": 2000,
		"messagingTimeoutMs": 30000,
		"messagingTtlMs": 600000
	},
	
	"spring.properties": {
		"server.host": "127.0.0.1",
		"server.port": "9090",
		"x.ssl.keyAlias": "server",
		"x.ssl.keyPassword": "pwd",
		"x.ssl.keyStore": "classpath:file.jks",
		"x.ssl.keyStoreProvider": "SUN",
		"x.ssl.keyStoreType": "JKS",
		"spring.profiles.active": "main",
		"spring.main.web-environment": false,
		"logging.level.root": "WARN"
	},

	"kafka": {
		"bootstrapServers": "boot-felynjdx.c1.kafka-serverless.us-east-1.amazonaws.com:9098",
		"groupId": "norsh-group",
		"topic": "norsh.data"
	},
	
	"redis": {
		"host": "clustercfg.rdssys.fpwpvo.memorydb.us-east-1.amazonaws.com",
		"port": 6379
	}
}
